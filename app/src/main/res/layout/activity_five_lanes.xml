<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/startLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    android:background="#ffe9ec"
    tools:context=".FiveLanes">

    <RelativeLayout
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/hearts"
            android:layout_width="127dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/heart1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/heart">

            </ImageView>

            <ImageView
                android:id="@+id/heart2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/heart">

            </ImageView>

            <ImageView
                android:id="@+id/heart3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/heart">

            </ImageView>

        </LinearLayout>

        <TextView
            android:id="@+id/scoreLabel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="@string/scoreLabel"
            android:paddingTop="10dp"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>

        <ImageView
            android:id="@+id/pause"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/pause1_icon">

        </ImageView>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frameGame"
        android:layout_below="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/leftBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:background="@drawable/left">
        </ImageButton>

        <ImageButton
            android:id="@+id/rightBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:background="@drawable/right">
        </ImageButton>
        <ImageView
            android:id="@+id/homer"
            android:layout_width="82dp"
            android:layout_height="134dp"
            android:layout_gravity="bottom"
            android:src="@drawable/homer_player">

        </ImageView>

        <ImageView
            android:id="@+id/ned1"
            android:layout_width="61dp"
            android:layout_height="76dp"
            android:src="@drawable/ned"></ImageView>

        <ImageView
            android:id="@+id/ned2"
            android:layout_width="61dp"
            android:layout_height="76dp"
            android:src="@drawable/ned"></ImageView>

        <ImageView
            android:id="@+id/ned3"
            android:layout_width="61dp"
            android:layout_height="76dp"
            android:src="@drawable/ned"></ImageView>

        <ImageView
            android:id="@+id/ned4"
            android:layout_width="61dp"
            android:layout_height="76dp"
            android:src="@drawable/ned">

        </ImageView>

        <ImageView
            android:id="@+id/ned5"
            android:layout_width="61dp"
            android:layout_height="76dp"
            android:src="@drawable/ned">

        </ImageView>

        <ImageView
            android:id="@+id/donut1"
            android:layout_width="61dp"
            android:layout_height="76dp"
            android:src="@drawable/donut"
            android:visibility="visible"></ImageView>

        <ImageView
            android:id="@+id/donut2"
            android:layout_width="61dp"
            android:layout_height="76dp"
            android:src="@drawable/donut"
            android:visibility="visible"></ImageView>

        <ImageView
            android:id="@+id/donut3"
            android:layout_width="61dp"
            android:layout_height="76dp"
            android:src="@drawable/donut"
            android:visibility="invisible"></ImageView>

        <ImageView
            android:id="@+id/donut4"
            android:layout_width="61dp"
            android:layout_height="76dp"
            android:src="@drawable/donut"
            android:visibility="invisible"></ImageView>

        <ImageView
            android:id="@+id/donut5"
            android:layout_width="61dp"
            android:layout_height="76dp"
            android:src="@drawable/donut"
            android:visibility="invisible">

        </ImageView>

    </FrameLayout>

</RelativeLayout>