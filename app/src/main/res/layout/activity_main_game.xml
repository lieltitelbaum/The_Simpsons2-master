<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe9ec"
    android:id="@+id/startLayout"
    android:orientation="vertical"
    tools:context=".MainGame">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/hearts"
            android:layout_width="127dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/heart1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/heart">

            </ImageView>

            <ImageView
                android:id="@+id/heart2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/heart">

            </ImageView>

            <ImageView
                android:id="@+id/heart3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/heart">

            </ImageView>
        </LinearLayout>

        <TextView
            android:id="@+id/scoreLabel"
            android:layout_width="19dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Score: 0"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>

        <ImageView
            android:id="@+id/pause"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:src="@drawable/pause1_icon">

        </ImageView>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameGame"
        android:layout_width="match_parent"
        android:layout_below="@+id/linear1"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/homer"
            android:layout_width="136dp"
            android:layout_height="169dp"
            android:layout_gravity="bottom"
            android:src="@drawable/homer_player">
        </ImageView>

        <ImageView
            android:id="@+id/donut1"
            android:layout_width="136dp"
            android:layout_height="118dp"
            android:layout_gravity="start"
            android:src="@drawable/donut"
            android:visibility="visible">

        </ImageView>


        <ImageView
            android:id="@+id/donut2"
            android:layout_width="136dp"
            android:layout_height="118dp"
            android:layout_gravity="center|top"
            android:src="@drawable/donut"
            android:visibility="visible">
        </ImageView>

        <ImageView
            android:id="@+id/donut3"
            android:layout_width="136dp"
            android:layout_height="118dp"
            android:layout_gravity="right|top"
            android:src="@drawable/donut"
            android:visibility="visible"></ImageView>

        <ImageButton
            android:id="@+id/leftBtn"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="10dp"
            android:background="@drawable/left"></ImageButton>

        <ImageButton
            android:id="@+id/rightBtn"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="10dp"
            android:background="@drawable/right"></ImageButton>

    </FrameLayout>
</RelativeLayout>
</LinearLayout>